#!/usr/bin/env bash

set -e
[ ! -x "otomi.sh" ] && echo "ERROR: the file otomi.sh does not exist or is not executable." 

match=".drone.tpl.yaml\|env.ini"
if git diff --cached --name-only | grep $match >/dev/null; then
  ./otomi.sh install-drone-pipelines
  git add */.drone.*.yml
fi
./otomi.sh encrypt
git add *.yaml
exit 0
