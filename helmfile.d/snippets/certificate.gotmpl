apiVersion: cert-manager.io/v1alpha2
kind: Certificate
metadata:
  name: {{ .name }}
  namespace: {{ if .cluster.hasCloudLB }}ingress{{ else }}istio-system{{ end }}
  labels: {{- .labels | toYaml | nindent 4 }}
spec:
  secretName: {{ .name }}
  commonName: '{{ .domain }}'
  dnsNames:
  - '{{ .domain }}'
  issuerRef:
    kind: ClusterIssuer
    name: letsencrypt-{{ .stage }}
  usages:
    - digital signature
    - key encipherment
    - ocsp signing
      
