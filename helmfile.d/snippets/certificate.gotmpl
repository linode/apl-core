apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ .name }}
  namespace: {{ if .otomi.hasCloudLB }}ingress{{ else }}istio-system{{ end }}
  annotations:
    helm.sh/resource-policy": keep
spec:
  secretName: {{ .name }}
  commonName: '{{ .domain }}'
  dnsNames:
  - '{{ .domain }}'
  issuerRef:
    kind: ClusterIssuer
    name: {{ .issuerName }}
  usages:
    {{- if eq .issuer "custom-ca" }}
    - server auth
    {{- else }}
    - digital signature
    - key encipherment
    - ocsp signing
    {{- end }}
