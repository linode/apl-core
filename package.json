  "description": "Otomi Core is an opinionated stack of Kubernetes apps and configurations. Part of Otomi Container Platform.",
  "devDependencies": {
    "@commitlint/cli": "11.0.0",
    "@commitlint/config-conventional": "11.0.0",
    "@hkdobrev/run-if-changed": "0.3.1",
    "@jest/types": "27.5.1",
    "@types/async-retry": "1.4.4",
    "@types/chai": "4.3.1",
    "@types/chai-as-promised": "7.1.5",
    "@types/debug": "4.1.7",
    "@types/express": "4.17.13",
    "@types/ignore-walk": "3.0.2",
    "@types/jest": "27.5.2",
    "@types/js-yaml": "4.0.5",
    "@types/jsonpath": "0.2.0",
    "@types/lodash": "4.14.182",
    "@types/node": "16.11.41",
    "@types/node-forge": "0.10.10",
    "@types/retry": "0.12.2",
    "@types/sinon": "9.0.11",
    "@types/sinon-chai": "3.2.8",
    "@types/supertest": "2.0.12",
    "@types/tar": "4.0.5",
    "@types/validator": "13.7.3",
    "@types/yargs": "17.0.10",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@vercel/ncc": "0.34.0",
    "adr-log": "2.2.0",
    "chai": "4.3.6",
    "commitizen": "4.2.4",
    "cspell": "4.2.8",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-chai-expect": "2.2.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "3.4.1",
    "git-cz": "4.9.0",
    "github-release-from-changelog": "2.1.1",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "jest-ts-auto-mock": "2.1.0",
    "json-schema-to-typescript": "10.1.5",
    "json2ts": "0.0.7",
    "jsonpath": "1.1.1",
    "lint-staged": "10.5.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "standard-version": "9.5.0",
    "ts-auto-mock": "3.6.2",
    "ts-jest": "27.1.5",
    "ts-node": "10.8.1",
    "ts-node-dev": "1.1.8",
    "tsconfig-paths": "3.14.1",
    "ttypescript": "1.5.13",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">=15.0.0",
    "npm": ">=6.0.0"
  },
  "homepage": "https://github.com/redkubes/otomi-core#readme",
  "license": "Apache-2.0",
  "lint-staged": {
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint --fix"
    ]
  },
  "main": "src/otomi.ts",
  "name": "otomi-core",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redkubes/otomi-core.git"
  },
  "run-if-changed": {
    "package-lock.json": "npm install --prefer-offline --no-audit",
    "values-schema.yaml": "npm run gen:chart-schema"
  },
  "scripts": {
    "adr": "adr-log -d adr -i",
    "check-policies": "TESTING=1 binzx/otomi check-policies",
    "compile": "tsc && chmod +x ./dist/src/otomi.js",
    "compile:watch": "npm run compile && tsc -w",
    "cz": "git-cz",
    "cz:retry": "git-cz -- --retry",
    "eslint": "eslint --ext ts .",
    "eslint:fix": "eslint --fix --ext ts .",
    "format": "prettier --check \"**/*.{json,md,yml,yaml}\"",
    "format:fix": "prettier --write \"**/*.{json,md,yml,yaml}\"",
    "gen:chart-schema": "js-yaml values-schema.yaml > chart/otomi/values.schema.json",
    "lint": "run-p spellcheck lint:hf lint:ts lint:types",
    "lint-staged": "lint-staged",
    "lint:fix": "prettier --write tests/**/*.yaml --write '.values/env/**/*.yaml' && npm run lint:ts:fix",
    "lint:hf": "export TESTING=1 && binzx/otomi lint",
    "lint:ts": "eslint --ext ts src",
    "lint:ts:fix": "eslint --fix --ext ts src",
    "lint:types": "tsc",
    "migrate-values": "ENV_DIR=$PWD/.values binzx/otomi migrate -ni && ENV_DIR=$PWD/tests/fixtures binzx/otomi migrate -ni && ENV_DIR=$PWD/tests/kind binzx/otomi migrate -ni",
    "prepare": "husky install",
    "server": "ts-node-dev --watch 'values-schema.yaml,src/**/*.ts' --inspect=4320 --respawn --transpile-only -r tsconfig-paths/register -r dotenv/config src/server/index.ts",
    "release": "standard-version",
    "release:github": "github-release-from-changelog",
    "run-if-changed": "run-if-changed",
    "score-templates": "TESTING=1 binzx/otomi score-templates",
    "spellcheck": "cspell '/docs/**/**.md' '/values-schema.yaml' '/*.md' '/.values/README.md'",
    "tasks:copy-certs": "binzx/otomi task -n copyCerts",
    "test": "TESTING=1 run-s test:ts validate-values lint check-policies",
    "test:opa": "binzx/otomi x opa test policies -v",
    "test:ts": "TESTING=1 jest",
    "test:ts-cov": "jest --coverage",
    "validate-templates": "set -e; i=19; while [ $i -le 23 ]; do TESTING=1 binzx/otomi validate-templates -k 1.$i; i=$(($i+1)); done",
    "validate-values": "TESTING=1 binzx/otomi validate-values"
  },
  "standard-version": {
    "skip": {
      "tag": true
    }
  },
  "type": "commonjs",
  "version": "0.16.18"
}
