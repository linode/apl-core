{{- $v := .Environment.Values }}
{{- $l := $v.charts.loki }}
{{- if $v.otomi.isMultitenant }}
resources:
  - apiVersion: v1
    kind: Secret
    metadata:
      labels:
        app: loki
      name: reverse-proxy-auth-config
    data:
      authn.yaml: {{ tpl (readFile "auth-config.gotmpl") (dict "adminPassword" $l.adminPassword "teams" $v.teamConfig.teams) | b64enc }}
{{- end }}