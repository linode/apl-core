{{- $v := .Values }}
{{- $k := $v.apps.gitea }}
{{- $cnpg := $v.apps.cnpg }}
{{- $kdb := $v.databases.gitea }}

name: gitea-db
storage:
  size: {{ $kdb.size }}

{{- if $kdb.imported }}
clusterSpec:
  bootstrap:
    initdb:
      database: gitea
      owner: gitea
      import:
        type: microservice
        databases:
          - gitea
        source:
          externalCluster: gitea-postgresql
  externalClusters:
  - name: gitea-postgresql
    connectionParameters:
      host: gitea-postgresql.gitea.svc.cluster.local
      user: gitea
      dbname: gitea
      sslmode: disable
    password:
      name: gitea-postgresql
      key: postgresql-password

{{- else }}
clusterSpec:  
  bootstrap:
    initdb:
      database: gitea
      owner: gitea
      secret:
        name: gitea-db-secret
      localeCollate: 'en_US.UTF-8'
      localeCType: 'en_US.UTF-8'
{{- end }}

instances: {{ $kdb.replicas }}

resources: {{- toYaml $kdb.resources | nindent 6 }}
