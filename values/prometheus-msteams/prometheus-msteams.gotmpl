{{- $v := .Values }}
{{- $ms := $v | get "apps.prometheus-operator.alertmanager.msteams" }}
replicaCount: 1
image:
  repository: quay.io/prometheusmsteams/prometheus-msteams
  tag: v1.3.3
connectors:
- high_priority_channel: {{ $ms.highPrio }}
- low_priority_channel: {{ $ms.lowPrio }}

# container:
#   additionalArgs:
#     - -debug

# customCardTemplate: ''
# Enable metrics for prometheus operator
metrics:
  serviceMonitor:
    enabled: true
    additionalLabels:
      release: prometheus # change this accordingly
    scrapeInterval: 30s

resources:
  limits:
    cpu: 10m
    memory: 32Mi
  requests:
    cpu: 1m
    memory: 8Mi

{{- with .Values.otomi | get "globalPullSecret" nil }}
image:
  pullSecrets:
    - otomi-pullsecret-global
{{- end }}
