{{- $v := .Values }}
{{- $i := $v.apps.istio }}
resources:
  - apiVersion: telemetry.istio.io/v1alpha1
    kind: Telemetry
    metadata:
      name: telemetry-defaults
      namespace: istio-system
    spec:
      accessLogging:
      - providers:
        - name: envoy
      {{- if $i.tracing.enabled }}
        - name: envoy-access-logs
      tracing:
      - providers:
        - name: otel-tracing
        randomSamplingPercentage: {{ $i.tracing.samplingRatio }}
  {{- end }}