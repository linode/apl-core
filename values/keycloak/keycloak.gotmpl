{{- $v := .Environment.Values }}
{{- $k := $v.charts.keycloak }}
{{- $p := $k | get "persistence" dict }}
{{- $keycloakFullname := $k.fullnameOverride }}
{{- $keycloakNamespace := $k.namespace }}

clusterDomain: cluster.local

## Optionally override the fully qualified name
fullnameOverride: {{ $keycloakFullname }}

## Optionally override the name
# nameOverride: keycloak

keycloak:
  # required .gotmpl replacement definitions
  selectorLabels:
    app.kubernetes.io/name: {{  $keycloakFullname }}
  fullname: {{ $keycloakFullname }}
  serviceAccountName: ""

  ## Username for the initial Keycloak admin user
  username: keycloak

  ## Password for the initial Keycloak admin user. Applicable only if existingSecret is not set.
  ## If not set, a random 10 characters password will be used
  password: "D33pLe@rn"

  ## The path keycloak will be served from. To serve keycloak from the root path, use two quotes (e.g. "").
  basepath: auth
