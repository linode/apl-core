{{- $v := .Values }}
resources:  
  - apiVersion: operator.knative.dev/v1alpha1
    kind: KnativeServing
    metadata:
      name: knative-serving
      namespace: knative-serving
    spec:
      version: 0.23.0
high-availability:
        # Temporary variable # of replicas, related to issue: https://github.com/knative/operator/issues/376 
        # if replicas <5 then pods cannot be evicted (due to pdb) 
        # TODO: revisit this to check if pub is made  configurable in operator
        replicas: {{ $v.charts | get "kured.enabled" "false" | ternary 5 1 }}
      config:
        defaults:
          revision-timeout-seconds: "300"  # 5 minutes
          enable-service-links: "false"
        autoscaler:
          stable-window: 600s
          scale-to-zero-grace-period: 60s
        deployment:
          registriesSkippingTagResolving: "ko.local,dev.local,docker.io,index.docker.io,gcr.io,azurecr.io"
        logging:
          loglevel.controller: debug
        domain:
          {{ $v.cluster.domainSuffix }}: ''
        istio:
          gateway.knative-serving.knative-ingress-gateway: istio-ingressgateway-public.istio-system.svc.cluster.local
        kubernetes:
          podspec-securitycontext: enabled
      ingress:
        istio: 
          enabled: true
          knative-ingress-gateway:
            selector:
              istio: ingressgateway-public
      knative-ingress-gateway:
        selector:
          istio: ingressgateway-public
  - apiVersion: security.istio.io/v1beta1
    kind: PeerAuthentication
    metadata:
      name: default
      namespace: knative-serving
    spec:
      mtls:
        mode: PERMISSIVE
