{{- $v := .Environment.Values }}
{{- $w := $v.charts | get "weaveScope" dict }}

global:
  image:
    tag: 1.12.0
  service:
    name: weave-scope

weave-scope-frontend:
  annotations:
    policy.otomi.io/ignore: pspallowedusers
  resources:
    requests:
      cpu: 200m
      memory: 64Mi
    limits:
      cpu: 1
      memory: 256Mi

weave-scope:
  annotations:
    policy.otomi.io/ignore: pspallowedusers
    
weave-scope-agent:
  annotations:
    policy.otomi.io/ignore: psphostfilesystem,pspallowedusers,pspprivileged,psphostsecurity,psphostnetworkingports
  resources:
    requests:
      cpu: 200m
      memory: 64Mi
    limits:
      cpu: 1
      memory: 256Mi

weave-scope-cluster-agent:
  annotations:
    policy.otomi.io/ignore: pspallowedusers
  resources:
    requests:
      cpu: 200m
      memory: 64Mi
    limits:
      cpu: 1
      memory: 256Mi
