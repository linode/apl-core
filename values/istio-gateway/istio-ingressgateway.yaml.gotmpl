{{- $v := .Values }}
{{- $i := $v.apps.istio }}

name: istio-ingressgateway{{- if $i.revision }}-{{ $i.revision }}{{ end }}-public
revision: {{ $i.revision | quote }}

{{- with .Values.otomi | get "globalPullSecret" nil }}
imagePullSecrets:
  - name: otomi-pullsecret-global
{{- end }}

labels:
  istio: ingressgateway-public
  app: ingressgateway

service:
  type: ClusterIP

resources: {{- $i.resources.ingressgateway | toYaml | nindent 2 }}
autoscaling:
  minReplicas: {{ $i | get "autoscaling.ingressgateway.minReplicas" }}
  maxReplicas: {{ $i | get "autoscaling.ingressgateway.maxReplicas" }}

priorityClassName: otomi-critical
