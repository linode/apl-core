{{- $v := .Values }}
{{- $p := $v.apps.promtail }}
{{- $l := $v.apps | get "loki" }}

nameOverride: promtail

resources: {{- $p.resources | toYaml | nindent 4 }}

serviceMonitor:
  enabled: true
  labels:
    prometheus: system

podSecurityContext:
  runAsGroup: 0
  runAsUser: 0
containerSecurityContext:
  readOnlyRootFilesystem: true
  capabilities:
    drop:
      - ALL
  allowPrivilegeEscalation: false

serviceMonitor:
  enabled: true
  labels:
    prometheus: system

podAnnotations:
  sidecar.istio.io/inject: "false"

config:
  clients:
    - url: http://loki-gateway.monitoring/loki/api/v1/push
      tenant_id: admins

  snippets:
    pipelineStages:
      - cri: {}
      - json:
          expressions:
            namespace:
      - labels:
          namespace:
      {{- range $id, $team := $v.teamConfig }}
      - match:
          selector: '{namespace="team-{{ $id }}"}'
          stages:
            - tenant:
                value: {{ $id }}
      {{- end }}
      - output: 
          source: message

priorityClassName: otomi-critical

{{- with .Values.otomi | get "globalPullSecret" nil }}
imagePullSecrets:
  - name: otomi-pullsecret-global
{{- end }}

