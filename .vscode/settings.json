{
  "[docker]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[shell]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[ejs]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[js]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[md]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.enabled": true,
  "editor.formatOnSave": true,
  "prettier.enable": true,
  "files.associations": {
    "*.gotmpl": "helm",
    "*.tmpl": "nginx",
    "*.tpl": "yaml",
    "_*.tpl": "helm",
    "*.yml": "yaml",
    ".secrets*": "shellscript",
    "aliases": "shellscript",
    "helmfile-*.yaml": "helm",
    "helmfile.yaml": "helm",
    "otomi": "shellscript",
    "bin/hooks/*": "shellscript",
    "CODE_OF_CONDUCT": "markdown",
    "CONTRIBUTING": "markdown"
  },
  "files.exclude": {
    "**/.history": true
  },
  "yaml.schemas": {
    "https://json-schema.org/draft-07/schema": "values-schema.yaml",
    ".values/values-schema.yaml": "**/env/*.yaml"
  },
  "shellcheck.exclude": ["2016", "2046", "2086", "2148"],
  "shellformat.flag": "-i 2 -ci",
  "opa.roots": ["${workspaceFolder}/policies"],
  "python.pythonPath": "/usr/local/bin/python3"
}
