{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug bootstrap",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "bootstrap"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "CI": "true",
        "ENV_DIR": "/tmp/otomi/env",
        "VALUES_INPUT": "${workspaceRoot}/src/fixtures/bootstrap/values-full.yaml"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "Debug apply",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "apply"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "Debug commit",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "commit"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "ENV_DIR": "/Users/Morriz/Documents/Workspace/redkubes/otomi/ENV_OUT/gke-dev"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "type": "node",
      "name": "Debug jest",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "test:ts", "--", "--runInBand", "--watchAll=false"]
    },
    {
      "type": "node",
      "name": "Debug jest current",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "disableOptimisticBPs": true,
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "npm",
      "args": ["run", "test:ts", "--", "--runInBand", "--watchAll=false", "${file}"]
    }
  ]
}
