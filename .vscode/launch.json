{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "args": ["-u", "bdd", "--timeout", "999999", "--colors", "${workspaceFolder}/**/*.spec.ts"],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "pwa-node"
    },
    {
      "name": "task:copyCerts",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "task", "-n", "copyCerts"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "IN_DOCKER": "1",
        "ENV_DIR": "${workspaceRoot}/tests/fixtures"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "validate-templates",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "validate-templates"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "ENV_DIR": "${workspaceRoot}/tests/fixtures"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "bootstrap",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "bootstrap"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "ENV_DIR": "${workspaceRoot}/tests/fixtures",
        "VERBOSITY": "4"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    },
    {
      "name": "migrate",
      "console": "integratedTerminal",
      "type": "pwa-node",
      "request": "launch",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
      "args": ["src/otomi.ts", "--", "migrate"],
      "cwd": "${workspaceRoot}",
      "internalConsoleOptions": "openOnSessionStart",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "env": {
        "VERBOSITY": "4"
      },
      "resolveSourceMapLocations": ["${workspaceFolder}/src/**"]
    }
  ]
}
