{
  "[docker,shell]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[json,md,yaml,enc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "files.associations": {
    "*.yml": "yaml",
    "*.yaml.enc": "yaml",
    "otomi": "shellscript",
    "aliases": "shellscript"
  },
  "sops.defaults.gcpCredentialsPath": "${workspaceFolder}/gcp-key.json",
  "yaml.schemas": {
    ".vscode/values-schema.json": "env/*.yaml"
  }
}
